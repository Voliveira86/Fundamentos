#include <iostream>
#include "math.h"

using namespace std;

int main()
{
    float a,b,c,d;
    double x,xr,xi,x1,x2;
    
    cout<<"ingrese a: ";
    cin>>a;
    if (a==0)
        cout<<"error";
    else
    {
        cout<<"ingrese b: ";
        cin>>b;
        cout<<"ingrese c: ";
        cin>>c;
        d=pow(b,2)-4*a*c;
        if (d==0)
        {
            x=-b/(2*a);
            cout<<"La solucion unica es: "<<x;
        }
        else
            if (d>0)
            {
                x1=(-b-sqrt(d))/(2*a);
                x2=(-b+sqrt(d))/(2*a);
                cout<<"las raices salen: "<<x1<<endl<<x2;
            }
            else
            {
                xr=(-b)/(2*a);
                xi=sqrt(-d)/(2*a);
                cout<<"las soluciones imaginarias son: "<<xr<<"+"<<xi<<"i"<<endl;
                cout<<"las soluciones imaginarias son: "<<xr<<"-"<<xi<<"i"<<endl;
            }
        
    } 
    return 0;
}
