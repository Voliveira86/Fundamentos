#include <iostream>
#include <string>
#define MAX 50

using namespace std;

void cargar(string nombre[], int n, float nota[]);
void mostrar(string nombre[], int n, float nota[]);
void burbujanombre(string nombre[], int n, float nota[]);
void burbujanota(string nombre[], int n, float nota[]);

int main()
{
    string Nombre[MAX];
    float Nota[MAX];
    int n;

    //Solicitar datos para validacion
    do {
        cout << "Ingresar el numero de estudiantes";
        cin >> n;
    } while ((n < 0) || (n > MAX));
    cargar(Nombre, n, Nota);
    cout << "La lista de estudiantes es: " << endl;
    burbujanombre(Nombre, n, Nota);
    mostrar(Nombre, n, Nota);
    cout << endl << "La lista de estudiantes por nota es: " << endl;
    burbujanota(Nombre, n, Nota);
    mostrar(Nombre, n, Nota);

    return 0;
}

void cargar(string nombre[], int n, float nota[])
{
    cout << "Ingresar los datos Nombre \t Nota";
    for (int i = 0; i < n; i++)
    {
        cin >> nombre[i];
        cout << "\t";
        cin >> nota[i];
    }
}
void mostrar(string nombre[], int n, float nota[])
{
    for (int i = 0; i < n; i++)
    {
        cin >> nombre[i];
        cout << "\t";
        cin >> nota[i];
    }
}
void burbujanombre(string nombre[], int n, float nota[])
{
    string aux;
    float aux2;
    for (int i = 0; i < n - 1; i++)
        for (int j = i; j < n; j++)
            if (nombre[i] > nombre[j])
            {
                aux = nombre[i];
                aux2 = nota[i];
                nombre[i] = nombre[j];
                nota[i] = nota[j];
                nombre[j] = aux;
                nota[j] = aux2;
            }
}
void burbujanota(string nombre[], int n, float nota[])
{
    string aux;
    float aux2;
    for (int i = 0; i < n - 1; i++)
        for (int j = i; j < n; j++)
            if (nota[i] > nota[j])
            {
                aux = nombre[i];
                aux2 = nota[i];
                nombre[i] = nombre[j];
                nota[i] = nota[j];
                nombre[j] = aux;
                nota[j] = aux2;
            }
}
