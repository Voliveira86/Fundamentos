// switch y case estudiar para examen
 #include <iostream> 
 using namespace std; 
 int main () 
 {
    int opcion,r,a,b;
    
     cout<<"1. SUMA"<<endl;
     cout<<"2. RESTA"<<endl;
     cout<<"3. PRODUCTO"<<endl;
     cout<<"4. DIVISION"<<endl;
     cout<<"ELIGE UNA OPCION "<<endl;
     cin>>opcion;
     cout<<"INGRESE LOS VALORES DE A Y B"<<endl;
     cin>>a>>b;
     switch (opcion)
     {
         case 1: r=a+b;break;
         case 2: r=a-b;break;
         case 3: r=a*b;break;
         case 4: r=a/b;break;
         default: cout<<"Opcion invalida"<<endl;
     }
 
    cout<<"el resultado es: "<<r<<endl; 
 }  
