#include <iostream>
using namespace std;
int main()
{
    int N, M;
    float suma=0, promedio;
    do {
        cout << "Ingresar el valor de N: ";
        cin >> N;
    } while (N <= 0);
    for (int i = 1; i <= N; i++)
    {
        cout << i << "+";
        suma = suma + i;
    }
        cout << "LA SUMA ES: " << suma << endl;
    

 
}
